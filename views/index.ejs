<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Lista de Tarefas</title>
  </head>
  <body>

    <% if(message != "") {%> 
      <section class="message message-<%= type %>">
      <p><%= message %></p>
      <span id="closeMessage"><i class="bi bi-x-square"></i></span>
      </section>
    <% } %>
  

    <header>
      <% if(task == null) { %>
      <h1>Lista de Tarefas</h1>
      <form action="/create" method="post">
        <input type="text" name="task" id="task" placeholder="Insira Aqui" />
        <button id="addButton" type="submit">Inserir</button>
      </form>
      <% }else{ %>
      <h1>Edite sua Atividade:</h1>
      <form action="/updateOne/<%= task._id %>" method="post">
        <input type="text" name="task" id="task" value="<%= task.task %>" />
        <button id="UpdateButton" type="submit">Update</button>
      </form>
      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task) => { %>
        <li class="check-<%= task.check %>">
          <div>
            <a href="/check/<%= task._id %>" class="check-<%= task.check %>"><%= task.task %></a>
            <spam>Data de Criação:<%= task.date.toLocaleDateString('pt-BR') %></spam>
          </div>
          <div>
            <a class="btnUpdate" href="/getById/<%= task._id %>/update"><i class="bi bi-pencil"></i></a>
            <a class="btnDelete" href="/getById/<%= task._id %>/delete"><i class="bi bi-trash3"></i></a>
          </div>
        </li>
        <% }) %>
      </ul>
    </section>

    <% if(taskDelete != null) { %>
    <section id="modal">
      <div id="card">
      <div>
        <h2>Tem certeza?    '-'</h2>
        <a id="fechar" href="/">Voltar ao menu <i class="bi bi-x-square"></i></a>
      </div id="head">  
        <hr/>
        <br>
        <p>Tem certeza que deseja deletar a tarefa:<br> <%= taskDelete.task %></p>
          <br>
          <p>Cuidado para não estar apagando por engano.</p> 
          <br>
        <div id="btns">
          <a id="btnCancelar" href="/">Cancelar</a>
          <a id="btnConfirmar" href="/deleteOne/<%= taskDelete._id %>">Confirmar</a>
        </div>  
      </div>
    </section>
    <% } %>
    <script src="script.js"></script>
  </body>
</html>
